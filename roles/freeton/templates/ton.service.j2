[Unit]
Description=Ton validation node
Wants=network-online.target
After=network-online.target

[Service]
LimitNOFILE=1024
ExecStart=/usr/local/sbin/ton/ton_node --configs /etc/ton/configs/ >>/var/log/ton/ton.log 2>>/var/log/ton/ton.err.log
ExecStop=/bin/kill -HUP $MAINPID
Restart=on-failure
User={{ton_user}}
Group={{ton_group}}
StandardOutput=file:{{log_path}}/node_d.log
StandardError=file:{{log_path}}/node_d.err

[Install]
WantedBy=multi-user.target